<p id="notice"><%= notice %></p>

<div class="d-flex" style="margin-left: 30%">
  <h1>Corrida</h1>
</div>

<div class="d-flex" style="justify-content: center">
  <table class="table table-striped table-dark" style="width: 40%">
    <tbody>
      <tr>
        <th>Nome:</th>
        <td><%= @carona.nome %></td>
      </tr>
      <tr>
        <th>Partida:</th>
        <td><%= @carona.partida %></td>
      </tr>
      <tr>
        <th>Destino:</th>
        <td><%= @carona.destino %></td>
      </tr>
      <tr>
        <th>Dia:</th>
        <td><%= @carona.dia %></td>
      </tr>
      <tr>
        <th>Hora:</th>
        <td><%= @carona.hora %></td>
      </tr>
      <tr>
        <th>Passageiros:</th>
        <td><%= @carona.passageiros %></td>
      </tr>
      <tr>
        <th>Valor:</th>
        <td><%= @carona.valor %></td>
      </tr>
      <tr>
        <th>Observacao:</th>
        <td><%= @carona.observacao %></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="d-flex" style="margin-left: 30%">
  <%= link_to 'Editar', edit_carona_path(@carona), class: 'btn btn-sm btn-dark' %>
  <%= link_to 'Voltar', caronas_path, class: 'btn btn-sm btn-dark', style: 'margin-left: 1%' %>
</div>
<% if @carona.paradas.presence %>
  <div class="d-flex" style="margin-left: 30%">
    <h1>Paradas</h1>
  </div>
  <% @carona.paradas.each do |parada| %>
    <div class="d-flex" style="justify-content: center">
      <table class="table table-striped table-dark" style="width: 40%">
        <tbody>
          <tr>
            <th>Parada:</th>
            <td><%= parada.endereco %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>


